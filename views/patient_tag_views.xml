<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Tree View-->
    <record id="view_patient_tag_tree" model="ir.ui.view">
        <field name="name">patient.tag.tree</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <tree string="Patient Tags">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_patient_tag" model="ir.actions.act_window">
        <field name="name">Patient Tags</field>
        <!-- put below the model name inside the field tags-->
        <field name="res_model">patient.tag</field>
        <!--Put below the tree view mode and form view mode inside the field tags-->
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient tag
            </p>
        </field>
    </record>

</odoo>